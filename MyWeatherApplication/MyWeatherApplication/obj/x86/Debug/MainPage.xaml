    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyWeatherApplication"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" d:DesignWidth="5276" d:DesignHeight="2888">

    <StackPanel>
        <Button x:ConnectionId='2' Content="Show me HN's Weather"                     />
        <TextBlock x:ConnectionId='3' Name="ResultWeatherTextBlock"/>
